<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ywq.ti.dao.AppMessageMapper">

  <resultMap id="BaseResultMap" type="com.ywq.ti.entity.AppMessage">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="user_id" jdbcType="BIGINT" property="userId" />
    <result column="msg" jdbcType="VARCHAR" property="msg" />
    <result column="create" jdbcType="TIMESTAMP" property="create" />
    <result column="is_read" jdbcType="INTEGER" property="isRead" />
  </resultMap>
  
  <select id="selectMessage" parameterType="java.lang.Long" resultMap="BaseResultMap">
    select * from app_message
    where id = #{id,jdbcType=BIGINT}
  </select>
  
  <select id="selectMessageList" parameterType="com.ywq.ti.entity.AppMessage" resultMap="BaseResultMap">
    select * from app_message
    where 1=1
    <trim prefix=" and (" suffix=")" suffixOverrides="and">
      <if test="userId != null">user_id = #{userId,jdbcType=BIGINT} and </if>
      <if test="isRead != null">is_read = #{isRead,jdbcType=INTEGER} and </if>
	</trim>
  </select>
  
  <select id="totalMessages" parameterType="java.util.Map" resultType="java.lang.Long">
    select count(*) from app_message
    where 1=1
    <trim prefix=" and (" suffix=")" suffixOverrides="and">
      <if test="userId != null">user_id = #{userId,jdbcType=BIGINT} and </if>
      <if test="isRead != null">is_read = #{isRead,jdbcType=INTEGER} and </if>
	</trim>
  </select>
  
  <select id="selectMessageListPage" parameterType="java.util.Map" resultMap="BaseResultMap">
    select * from app_message
    where 1=1
    <trim prefix=" and (" suffix=")" suffixOverrides="and">
      <if test="userId != null">user_id = #{userId,jdbcType=BIGINT} and </if>
      <if test="isRead != null">is_read = #{isRead,jdbcType=INTEGER} and </if>
	</trim>
	limit #{start},#{pageSize}
  </select>
   
  <insert id="insertMessageBatch" useGeneratedKeys="false" keyProperty="id" parameterType="java.util.List">
    insert into app_message 
	  	(user_id, msg)
	values  
	  <foreach collection="list" item="item" index="index" separator="," >  
	    (#{item.userId,jdbcType=BIGINT}, #{item.msg,jdbcType=VARCHAR})
	  </foreach>  
  </insert>

  <update id="updateMessage" parameterType="com.ywq.ti.entity.AppMessage">
    update app_message isRead = 1
    where 1=1
    <trim prefix=" and (" suffix=")" suffixOverrides="and">
      <if test="id != null">id = #{id,jdbcType=BIGINT} and </if>
      <if test="userId != null">user_id = #{userId,jdbcType=BIGINT} and </if>
	</trim>
  </update>
  
</mapper>